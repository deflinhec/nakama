{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Launch services",
            "type":"shell",
            "command": "docker-compose",
            "args": [
                "up", "-d",
                "prometheus", "cockroachdb",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true,
            }
        },
        {
          "label": "Launch service (nakama)",
          "type":"shell",
          "command": "go",
          "args": [
              "run", "main.go",
              "--name=nakama1",
              "--metrics.prometheus_port=9100",
              "--socket.server_key=deficasino",
              "--session.single_socket=true",
              "--database.address=root@localhost:26257",
              "--logger.level=debug",
              "--session.token_expiry_sec=7200",
              "--mail.verification.enable=true"
          ],
          "options": {
              "cwd": "${workspaceFolder}"
          },
          "group": {
              "kind": "build",
              "isDefault": true,
          }
        },
        {
            "label": "Migrate up",
            "type":"shell",
            "command": "go",
            "args": [
                "run", "main.go",
                "migrate", "up",
                "--database.address", "root@localhost:26257"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn":[
                "Launch services",
            ],
        },
        {
            "label": "Build Image (nakama)",
            "type":"shell",
            "command": "make",
            "args": ["image"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Build Image (nakama-pluginbuilder)",
            "type":"shell",
            "command": "make",
            "args": ["pluginbuilder-image"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Build Images",
            "dependsOn": [
                "Build Image (nakama)",
                "Build Image (nakama-pluginbuilder)"
            ]
        },
    ]
  }
